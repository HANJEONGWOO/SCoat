<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainback">

  <Button
      android:id="@+id/BeAngel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/SeeMap"
      android:layout_alignBottom="@+id/SeeMap"
      android:layout_alignParentRight="true"
      android:layout_marginRight="42dp"
      android:background="@drawable/beangel" />

  <Button
      android:id="@+id/SeeMap"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="92dp"
      android:layout_marginRight="26dp"
      android:layout_toLeftOf="@+id/imageView2"
      android:background="@drawable/mainbt" />

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/SeeMap"
      android:layout_alignTop="@+id/imageView2"
      android:src="@drawable/seemapt" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/BeAngel"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="53dp"
      android:src="@drawable/beangelt" />

</RelativeLayout>