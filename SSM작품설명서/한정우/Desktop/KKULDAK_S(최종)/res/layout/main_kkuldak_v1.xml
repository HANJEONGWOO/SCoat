<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_back"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Kkuldak_v1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.52"
            android:orientation="vertical" >
        </LinearLayout>

        <ToggleButton
            android:id="@+id/mainorder_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textOff="" 
  			android:textOn=""
            android:background="@drawable/menubtn_b" />

        <ToggleButton
            android:id="@+id/mainmypage_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textOff="" 
  			android:textOn=""
            android:background="@drawable/mypagebtn_b" >

        </ToggleButton>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.52"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.52"
            android:orientation="vertical" >
        </LinearLayout>

        <ToggleButton
            android:id="@+id/mainstore_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textOff="" 
  			android:textOn=""
            android:background="@drawable/basketbtn_b" />

        <ToggleButton
            android:id="@+id/mainback_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textOff="" 
  			android:textOn=""
            android:background="@drawable/backbtn_b" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.52"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>